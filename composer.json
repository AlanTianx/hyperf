{
    "name": "daosoft/scaffold",
    "type": "project",
    "description": "A coroutine framework that focuses on hyperspeed and flexible.",
    "keywords": [
        "php",
        "swoole",
        "framework",
        "hyperf",
        "daosoft"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/daosoft/scaffold/issues?state=open",
        "source": "https://github.com/daosoft/scaffold"
    },
    "require": {
        "php": ">=7.2",
        "ext-swoole": ">=4.5",
        "duncan3dc/blade": "^4.8",
        "hyperf/cache": "~1.1.0",
        "hyperf/command": "~1.1.0",
        "hyperf/config": "~1.1.0",
        "hyperf/db-connection": "~1.1.0",
        "hyperf/framework": "~1.1.0",
        "hyperf/guzzle": "~1.1.0",
        "hyperf/http-server": "~1.1.0",
        "hyperf/logger": "~1.1.0",
        "hyperf/memory": "~1.1.0",
        "hyperf/model-cache": "~1.1.0",
        "hyperf/process": "~1.1.0",
        "hyperf/redis": "~1.1.0",
        "hyperf/session": "^1.1",
        "hyperf/snowflake": "^1.1",
        "hyperf/swagger": "^1.1",
        "hyperf/task": "^1.1",
        "hyperf/validation": "^1.1",
        "hyperf/view": "^1.1",
        "hyperf/websocket-server": "^1.1",
        "overtrue/easy-sms": "^1.1",
        "overtrue/pinyin": "^4.0",
        "overtrue/wechat": "^4.2",
        "symfony/event-dispatcher": "^4.3",
        "yurunsoft/pay-sdk": "^3.0",
        "yurunsoft/yurun-oauth-login": "^3.0"
    },
    "require-dev": {
        "swoft/swoole-ide-helper": "^4.2",
        "phpmd/phpmd": "^2.6",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "doctrine/common": "^2.9",
        "phpstan/phpstan": "^0.11.2",
        "hyperf/devtool": "~1.1.0",
        "hyperf/testing": "~1.1.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": [],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "@php artisan app:autoload",
            "init-proxy.sh"
        ],
        "cs-fix": "php-cs-fixer fix $1",
        "test": "co-phpunit -c phpunit.xml --colors=always"
    }
}
